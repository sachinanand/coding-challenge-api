{
  "exclude": [
    "node_modules",
    "build",
    "test",
    "jest.config.js",
    "test.js",
    "coverage"
  ],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build/",
    "rootDir": "src",
    "types": [
      "node",
      "jest"
    ],
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true
  }
}
